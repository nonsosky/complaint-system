<div class="container  col-md-8" id="complaint">

    <div class="card card-body">
        <h3 class="text-center">Account Register</h3>
        <form action="/student/signup" method="post">
            <div class="row">
                <div class="col-md-4">
                    <label for="name">LastName</label>
                    <input type="text" name="lastname" class="form-control" required>
                </div>
                <div class="col-md-4">
                    <label for="name">FirstName</label>
                    <input type="text" name="firstname" class="form-control" required>
                </div>
                <div class="col-md-4">
                    <label for="name">MiddleName</label>
                    <input type="text" name="middlename" class="form-control" required>
                </div>
                <div class="col-md-4">
                    <label for="name">Gender</label>
                    <select name="gender" class="form-control">
                        <option value="">Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                    </select>
                </div>
                <div class="col-md-4">  
                    <label for="dob">Date Of Birth</label>
                    <input type="date" name="dob" class="form-control" required>
                </div>
                 <div class="col-md-4">
                     <label for="tel">Phone Number</label>
                    <div class="input-group">
                        <span class="input-group-addon pt-2 " id="add">+234</span>
                        <input type="text" name="phoneNo" class="form-control" data-toggle="tooltip" title="Phone Number"
                            placeholder="Phone Number" maxlength="10" required="required" id="phoneNo" />
                    </div>
                </div>
                <div class="col-md-4">
                    <label for="email">Email</label>
                    <input type="email" name="email" class="form-control" placeholder="" required>
                </div>
                <div class="col-md-4">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                <div class="col-md-4">
                    <label for="password2">Confirm Password</label>
                    <input type="password" name="password2" class="form-control" required>
                </div>
                <div class="col-md-4">
                    <label for="name">Department</label>
                    <select name="department" class="form-control">
                        {{#each departments}}
                        <option value="{{dept_id}}">{{dept_name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-md-4">
                    <label for="name">Matric Number</label>
                    <input type="text" name="matric" class="form-control" required>
                </div>
            </div>
            <div class="form-group mt-4">
            <button type="submit" class="btn btn-warning">Create Account</button>
            </div>
        </form>
    </div>
</div>
</div>